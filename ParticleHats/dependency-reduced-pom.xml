<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>com.mediusecho</groupId>
  <artifactId>ParticleHats-Effects</artifactId>
  <version>4.2.0</version>
  <build>
    <finalName>ParticleHats-Effects</finalName>
    <plugins>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>3.3</version>
        <configuration>
          <source>1.8</source>
          <target>1.8</target>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>2.4.3</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <transformers>
                <transformer>
                  <mainClass>package.Main</mainClass>
                </transformer>
              </transformers>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
  <repositories>
    <repository>
      <id>cubekrowd-repo</id>
      <url>https://mavenrepo.cubekrowd.net/artifactory/repo/</url>
    </repository>
    <repository>
      <id>dakani</id>
      <name>Dakani Nexus Repo</name>
      <url>http://repo.dakanilabs.com/content/repositories/public</url>
    </repository>
    <repository>
      <id>everything</id>
      <url>https://repo.citizensnpcs.co/</url>
    </repository>
    <repository>
      <id>jitpack.io</id>
      <url>https://jitpack.io</url>
    </repository>
  </repositories>
  <dependencies>
    <dependency>
      <groupId>de.myzelyam</groupId>
      <artifactId>SuperVanish</artifactId>
      <version>6.0.4</version>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>org.black_ixx</groupId>
      <artifactId>PlayerPoints</artifactId>
      <version>2.1.3</version>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>net.citizensnpcs</groupId>
      <artifactId>citizens</artifactId>
      <version>2.0.25-SNAPSHOT</version>
      <scope>provided</scope>
      <exclusions>
        <exclusion>
          <artifactId>citizens-main</artifactId>
          <groupId>net.citizensnpcs</groupId>
        </exclusion>
        <exclusion>
          <artifactId>citizens-v1_8_R3</artifactId>
          <groupId>net.citizensnpcs</groupId>
        </exclusion>
        <exclusion>
          <artifactId>citizens-v1_10_R1</artifactId>
          <groupId>net.citizensnpcs</groupId>
        </exclusion>
        <exclusion>
          <artifactId>citizens-v1_11_R1</artifactId>
          <groupId>net.citizensnpcs</groupId>
        </exclusion>
        <exclusion>
          <artifactId>citizens-v1_12_R1</artifactId>
          <groupId>net.citizensnpcs</groupId>
        </exclusion>
        <exclusion>
          <artifactId>citizens-v1_13_R2</artifactId>
          <groupId>net.citizensnpcs</groupId>
        </exclusion>
        <exclusion>
          <artifactId>citizens-v1_14_R1</artifactId>
          <groupId>net.citizensnpcs</groupId>
        </exclusion>
      </exclusions>
    </dependency>
    <dependency>
      <groupId>com.github.MilkBowl</groupId>
      <artifactId>VaultAPI</artifactId>
      <version>1.7</version>
      <scope>provided</scope>
      <exclusions>
        <exclusion>
          <artifactId>bukkit</artifactId>
          <groupId>org.bukkit</groupId>
        </exclusion>
      </exclusions>
    </dependency>
  </dependencies>
</project>

